{% extends 'base.html.twig' %}

{% block body %}
    <div class="home_pizza container-fluid py-5">
        <hr>
        <h1 class="text-center display-2">{{ category.name }}'s</h1>
        <hr>
        <div class="shopper">
            <div class="shopper_first">
                <h4 class="mb-0 mt-5 p-2">Jouw bestelling</h4>
            </div>
            <div class="shopper_second flex-column py-1">
                <br><br><br>
                <hr>
                <p class="p-2">Totaal: <span class="float-end me-4">€0,00</span></p>
                <a href="#" class="button"><button type="button" class="btn mx-auto d-flex align-items-center my-3">Bestellen</button></a>
            </div>
        </div>
        {% for pizza in category.products %}
            <div class="pizza_block my-5">
                <div class="row g-0 p-0">
                    <div class="pizza_image col-md-3">
                        <img src="{{ asset(pizza.image) }}" class="img-fluid rounded-start p-4" alt="pizza">
                    </div>
                    <div class="pizza_breakpoint col-md-3">
                        <div class="card-body p-3">
                            <h5>{{ pizza.name }}</h5>
                            <p>{{ pizza.ingredients }}</p>
                            <br>
                            <p>€{{ pizza.price }}</p>
                            <a href="{{ path('app_order', {id:pizza.id}) }}" class="button text-decoration-none"><button type="button" class="btn mx-auto d-block">Toevoegen</button></a>
                        </div>
                    </div>
                </div>
            </div>
    {% endfor %}
    </div>
{% endblock %}