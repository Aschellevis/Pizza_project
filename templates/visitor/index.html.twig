{% extends 'base.html.twig' %}

{% block title %}Hello VisitorController!{% endblock %}

{% block body %}
<div class="home container-md py-5">
    <div class="row">
        {% for category in categories %}
        <div class="col-4">
            <div class="card">
                <img src="{{ category.image }}" class="card-img-top" alt="pizza">
                <div class="card-body">
                    <h5 class="card-title">{{ category.name }}</h5>
                    <p class="card-text">{{ category.description }}</p>
                    <a class="stretched-link" href="{{ path('app_category', {category_id:category.id}) }}"></a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
